
<%= simple_form_for(car) do |f| %>
  <%= f.input :model %>
  <%= f.input :year %>
  <%= f.input :color %>
  <%= f.input :category, collection: Car::CATEGORIES%>
  <%= f.input :location %>
  <%= f.input :fuel, collection: Car::FUELS%>
  <%= f.input :number_of_seats %>
  <%= f.input :price_day %>
  <%= f.input :description %>
  <%= f.input :picture %>
  <%= f.submit "Save" %>
<% end %>
