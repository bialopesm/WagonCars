<div class="container mt-5">
  <h1 class="mb-3"><strong><%= @car.model %></strong></h1>

  <div class="row">
    <div class="col-md-8">
      <% if @car.picture.attached? %>
        <div class="mb-3 h-100">
          <%= image_tag @car.picture, class: "img-fluid rounded w-100 h-100 shadow-sm" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="text-center"><strong>Details</strong></h3>
          <p><strong>Model:</strong> <%= @car.model %></p>
          <p><strong>Year:</strong> <%= @car.year %></p>
          <p><strong>Category:</strong> <%= @car.category %></p>
          <p><strong>Location:</strong> <%= @car.location %></p>
          <p><strong>Owner:</strong> <%= @car.user.email %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-8 text-center">
      <h3 class="text-center"><strong>Price / day</strong></h3>
      <p>R$ 100,00</p>
    </div>

    <div class="col-md-4">
      <%= link_to 'Make a reservation', new_car_rental_path(@car.id), class: "btn btn-primary btn-lg" %>
    </div>
  </div>

  <div class="mt-5">
    <%= link_to 'Edit', edit_car_path(@car), class: "btn btn-warning" %>
    <%= link_to 'Back to list', cars_path, class: "btn btn-primary" %>
    <%= link_to 'Delete', car_path(@car), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this car?' }, class: "btn btn-danger" %>
  </div>
</div>
