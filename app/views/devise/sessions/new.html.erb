<body class="bg-beige">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card bg-white shadow-sm">
          <div class="card-body">
            <h2 class="text-center mb-4">Log in</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs mb-3">
                <div class="mb-3">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { class: "form-control", placeholder: "Enter your email", autocomplete: "email" },
                              label_html: { class: "form-label" } %>
                </div>
                <div class="mb-3">
                  <%= f.input :password,
                              required: false,
                              input_html: { class: "form-control", placeholder: "Enter your password", autocomplete: "current-password" },
                              label_html: { class: "form-label" } %>
                </div>
                <% if devise_mapping.rememberable? %>
                  <div class="form-check mb-3">
                    <%= f.input :remember_me,
                                as: :boolean,
                                input_html: { class: "form-check-input" },
                                label_html: { class: "form-check-label" } %>
                  </div>
                <% end %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-dark w-100 " %>
              </div>
            <% end %>

            <div class="text-center mt-3">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
