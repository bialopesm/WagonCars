<body class="bg-beige">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card bg-white shadow-sm">
          <div class="card-body">
            <h2 class="text-center mb-4">Sign up</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-inputs mb-3">
                <div class="mb-3">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { class: "form-control", placeholder: "Enter your email", autocomplete: "email" },
                              label_html: { class: "form-label" } %>
                </div>
                <div class="mb-3">
                  <%= f.input :password,
                              required: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { class: "form-control", placeholder: "Enter your password", autocomplete: "new-password" },
                              label_html: { class: "form-label" } %>
                </div>
                <div class="mb-3">
                  <%= f.input :password_confirmation,
                              required: true,
                              input_html: { class: "form-control", placeholder: "Confirm your password", autocomplete: "new-password" },
                              label_html: { class: "form-label" } %>
                </div>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Sign up", class: "btn btn-dark w-100 " %>
              </div>
            <% end %>

            <div class="text-center mt-3">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
