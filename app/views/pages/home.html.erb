      <%= link_to 'Login', new_user_session_path, class: 'btn btn-outline-primary rounded-5 px-4' %>
    </div>
  <% end %>
  <header class="bg-dark text-white py-3">
      <div class="container text-center">
          <h1 class="h3 mb-2">WagonCars</h1>
          <p class="small mb-0">Your trusted platform for car rentals.</p>
      </div>
  </header>

  <div class="container my-4">
      <div class="row justify-content-center">
          <div class="col-md-5 col-lg-4 mb-4">
              <div class="p-3 shadow-sm rounded-5 border bg-white">
